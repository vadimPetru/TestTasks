<UserControl x:Class="TestTask.GUI_Framework__WPF_.View.Modal.TradeContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestTask.GUI_Framework__WPF_.View.Modal"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Border Background="White" Padding="10" BorderBrush="Gray" BorderThickness="1">
        <Grid>
            <StackPanel>
                <TextBlock Text="Введите пару:" Margin="0 0 0 10"/>
                <TextBox Text="{Binding Pair, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
