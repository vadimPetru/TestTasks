<Window x:Class="TestTask.GUI_Framework__WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TestTask.GUI_Framework__WPF_.ViewModel"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="500" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>

        <TabControl>
            <TabItem Header="Rest">

                <!--Кнопки для Rest-->
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="37*"/>
                        <RowDefinition Height="39*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="11*"/>
                        <ColumnDefinition Width="783*"/>
                    </Grid.ColumnDefinitions>

                    <!--DataGrid-->
                    <DataGrid ItemsSource="{Binding CurrentCollection}"
                       Width="600"
                       Height="350"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       AutoGenerateColumns="True" Margin="86,40,0,0" Grid.RowSpan="2" Grid.Column="1"
                    />
                    <Button Content="{Binding TradeButton}" 
                         HorizontalAlignment="Right"
                         VerticalAlignment="Bottom"
                         Margin="0,0,15,15"
                         Width="110"
                        Command="{Binding FetchTradeDataCommand}" Grid.Column="1" Grid.Row="1"
                     />

                    <Button Content="{Binding CandleButton}" 
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      Margin="4,0,0,15"
                      Width="110"   
                      Command="{Binding FetchCandleDataCommand}" Grid.Column="1" Grid.Row="1"
                    />
                </Grid>
            </TabItem>
            <TabItem Header="Websockets" Height="20" VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="124*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="268*"/>
                    </Grid.ColumnDefinitions>
                    <DockPanel  HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="auto" Grid.ColumnSpan="3">
                        <Button DockPanel.Dock="Left"   Content="Подписка на Trade"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Command="{Binding SubscribeTradeCommand}" />
                        <Button DockPanel.Dock="Left"   Content="Отписка на Candle"  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5" Command="{Binding }"/>
                        <Button DockPanel.Dock="Left"   Content="Отписка на Trade"   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5"/>
                        <Button DockPanel.Dock="Left"   Content="Подписка на Candle" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5"/>
                    </DockPanel>
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="500" />
                            </Grid.ColumnDefinitions>
                            <DataGrid Grid.Column="0" 
                              ItemsSource="{Binding Buy}" 
                              HorizontalAlignment="Stretch" 
                              VerticalAlignment="Stretch" />
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
