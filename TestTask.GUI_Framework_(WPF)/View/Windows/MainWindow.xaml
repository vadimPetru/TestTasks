<Window x:Class="TestTask.GUI_Framework__WPF_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TestTask.GUI_Framework__WPF_.ViewModel"
        xmlns:local="clr-namespace:TestTask.GUI_Framework__WPF_"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="500" Width="800">
   
    <Grid>

        <TabControl>
            <TabItem Header="Rest">
                <!--DataGrid-->
              
                <!--Кнопки для Rest-->
                <Grid Background="#FFE5E5E5">
                    <Button Content="{Binding TradeButton}" 
                         HorizontalAlignment="Right"
                         VerticalAlignment="Bottom"
                         Margin="15"
                         Width="110"
                        Command="{Binding FetchTradeDataCommand}"
                     />

                    <Button Content="{Binding CandleButton}" 
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom"
                      Margin="15"
                      Width="110"   
                      Command="{Binding FetchCandleDataCommand}"
                    />
                    <Button Content="{Binding TickerButton}" 
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      Margin="15"
                      Width="110"   
                     />
                </Grid>

              
                
            </TabItem>
            <TabItem Header="Websockets">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="17*"/>
                        <ColumnDefinition Width="54*"/>
                        <ColumnDefinition Width="723*"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
